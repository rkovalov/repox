{
  "name": "github-repos",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rsbuild build",
    "check": "biome check --write",
    "check:cspell": "cspell",
    "check:dependencies": "pnpm dedupe --check",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf node_modules dist",
    "dev": "rsbuild dev --open",
    "format": "biome format .",
    "format:fix": "pnpm format --write",
    "format:lint": "biome check .",
    "format:lint:fix": "pnpm format:lint --write",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "lint": "biome lint .",
    "lint:fix": "pnpm lint --write",
    "preview": "rsbuild preview",
    "sort-package-json": "sort-package-json \"./package.json\""
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "commit-msg": "pnpm commitlint --edit"
  },
  "nano-staged": {
    "*/**/package.json": [
      "sort-package-json",
      "biome check --write --no-errors-on-unmatched"
    ],
    "package.json": [
      "sort-package-json",
      "biome check --write --no-errors-on-unmatched",
      "pnpm check:dependencies"
    ],
    "pnpm-lock.yaml": "pnpm dedupe --check",
    "*.{js,ts,mts,tsx,css,md,json}": [
      "biome check --write --no-errors-on-unmatched",
      "pnpm check:cspell --no-progress --show-suggestions --no-must-find-files --show-context"
    ]
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@rsbuild/core": "^1.3.18",
    "@rsbuild/plugin-react": "^1.3.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "cspell": "^9.0.1",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.13.0",
    "sort-package-json": "^3.2.1",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.1.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  }
}
