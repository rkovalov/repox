{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-empty": [2, "never"],
    "scope-enum": [2, "always"],
    "subject-case": [2, "always", ["lower-case", "kebab-case", "snake-case", "sentence-case"]],
    "type-enum": [2, "always", ["ci", "chore", "docs", "feat", "fix", "perf", "refactor", "revert", "test"]]
  }
}
